generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String
  password  String
  role      String   @default("user") // "superadmin" | "admin" | "user" | "engineer"
  tickets   Ticket[] @relation("UserTickets")
  assignedTickets Ticket[] @relation("EngineerTickets")
  createdAt DateTime @default(now())
}

model Ticket {
  id          Int      @id @default(autoincrement())
  description String
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  service     String
  userId      Int
  user        User     @relation("UserTickets", fields: [userId], references: [id])
  engineerId  Int?     // nullable, not required at creation
  engineer    User?    @relation("EngineerTickets", fields: [engineerId], references: [id])
}

model Service {
  id    Int    @id @default(autoincrement())
  name  String @unique
}